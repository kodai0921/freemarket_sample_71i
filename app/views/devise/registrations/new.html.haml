.user-register
  .header
  .user-wrapper
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        .nickname
          ニックネーム
        = f.text_field :nickname, autofocus: true, class: "text-css",placeholder: '例)フリマ太郎'
      .field
        .email
          メールアドレス
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "text-css",placeholder: 'PCと携帯どちらでも可'
      .field
        .password
          パスワード
        = f.password_field :password, autocomplete: "new-password", class: "text-css",placeholder: '7文字以上の半角英数字'
      .field
        .field-label
          パスワード確認
        .field-input
          = f.password_field :password_confirmation, autocomplete: "off", class: "text-css",placeholder: 'パスワード確認'
      .field
        .field_top
          お名前(全角)
        = f.text_field :first_name, class: "name-css", placeholder: '例)山田'
        = f.text_field :last_name, class: "name-css", placeholder: '例)彩'
        %br/
        .field_bottom
          お名前カナ(全角)
        = f.text_field :first_name_kana, class: "name-css", placeholder: '例)ヤマダ'
        = f.text_field :last_name_kana, class: "name-css", placeholder: ' 例)サエ'
      .field
        .field_birth-date
          生年月日
        != sprintf(f.date_select(:birth_date, class: "birth-date",prefix: 'birth_date', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
      .tel
        .tel__top
          電話番号
        = f.text_field :tel, class: "tel__number"
      %button{class: "back"}
        戻る
      %button{class: "next"}
        次へ

      = render "devise/shared/links"

